# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{ts,js,mjs}]
indent_style = space
indent_size = 2

# Astro files
[*.astro]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# TOML files
[*.toml]
indent_style = space
indent_size = 2


