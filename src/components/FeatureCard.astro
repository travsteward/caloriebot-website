---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-dark-800 p-6 rounded-2xl border border-white/5 hover:border-white/10 hover:bg-dark-700 transition-all duration-300 group hover:-translate-y-1">
  <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300 origin-left">{icon}</div>
  <h3 class="text-xl font-bold text-white mb-3">{title}</h3>
  <p class="text-gray-400 leading-relaxed">{description}</p>
</div>