      <!-- Latest Posts -->
      <div>
        <h3 class="text-white font-semibold mb-4">Latest Posts</h3>
        <div class="space-y-3">
          {latestPosts.map(post => (
            <a href={`/blog/${post.slug}/`} class="block group">
              <div class="flex gap-3">
