---
const currentYear = new Date().getFullYear();

// Import all markdown blog posts (same source of truth as blog index)
const allPosts = await import.meta.glob('../pages/blog/*.md', { eager: true });

const posts = Object.entries(allPosts).map(([path, post]) => {
  const slug = path.split('/').pop()?.replace('.md', '') ?? '';
  const frontmatter = (post as any).frontmatter || {};

  return {
    title: frontmatter.title || 'Untitled',
    slug,
    description: frontmatter.description || '',
    publishedDate: frontmatter.publishedDate || '2024-01-01',
    author: frontmatter.author || 'CalorieBot Team',
    authorImage: frontmatter.authorImage || '/avatars/caloriebot-team.svg',
    coverImage: frontmatter.coverImage || '/blog/default-cover.svg',
    coverImageAlt: frontmatter.coverImageAlt || frontmatter.title || '',
    tags: frontmatter.tags || []
  };
});

// Sort posts by date (newest first) and get latest 3
const latestPosts = [...posts]
  .sort((a, b) =>
    new Date(`${b.publishedDate}T12:00:00Z`).getTime() -
    new Date(`${a.publishedDate}T12:00:00Z`).getTime()
  )
  .slice(0, 3);
