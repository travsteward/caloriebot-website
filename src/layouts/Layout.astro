---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
  publishedDate?: string;
  modifiedDate?: string;
  author?: string;
  readingTime?: string;
  price?: string;
  ratingValue?: number;
  ratingCount?: number;
  robots?: string;
}

const {
  title,
  description = "Transform your Discord server with AI photo calorie tracking, guided workouts, challenges, and coaching tools. Perfect for fitness communities.",
  image = "/social-preview.jpg",
  canonicalURL = Astro.url.href,
  type = 'website',
  publishedDate,
  modifiedDate,
  author = "CalorieBot Team",
  readingTime,
  price,
  ratingValue,
  ratingCount,
  robots = "index, follow"
} = Astro.props;

const siteName = "CalorieBot - AI Fitness for Discord";
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CalorieBot",
  "url": "https://caloriebot.ai",
  "logo": "https://caloriebot.ai/icon-512.png",
  "description": "AI-powered Discord fitness bot for photo calorie tracking and community engagement",
  "sameAs": [
    "https://twitter.com/caloriebotai",
    "https://discord.gg/caloriebot"
  ]
};

// Simplified schema for better performance - removed excessive markup
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#0F1115">

    <!-- Preload critical assets -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" as="style" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="robots" content={robots} />
    <meta name="keywords" content="discord fitness bot, calorie tracking, AI food recognition, fitness community, workout tracking, fitness challenges, discord server monetization" />
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://caloriebot.ai').href} />
    {readingTime && <meta name="twitter:label1" property="Reading time" content={readingTime} />}
    {readingTime && <meta name="twitter:data1" property="Reading time" content={readingTime} />}

    <!-- Preconnect to required origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={new URL(Astro.url.pathname, 'https://caloriebot.ai').href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:image:alt" content={title} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={new URL(Astro.url.pathname, 'https://caloriebot.ai').href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    <meta name="twitter:site" content="@caloriebotai" />
    <meta name="twitter:creator" content="@caloriebotai" />

    <!-- Simplified Schema.org markup for better performance -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Deferred Analytics for better performance -->
    <script>
      // Defer analytics loading until page is interactive
      window.addEventListener('load', function() {
        // Ahrefs Analytics
        const ahrefs = document.createElement('script');
        ahrefs.src = 'https://analytics.ahrefs.com/analytics.js';
        ahrefs.setAttribute('data-key', 'g0xcQl1PmXzsJQB8EGLozA');
        ahrefs.async = true;
        document.head.appendChild(ahrefs);

        // Google Analytics
        const gtag = document.createElement('script');
        gtag.src = 'https://www.googletagmanager.com/gtag/js?id=G-8SD2BXG767';
        gtag.async = true;
        gtag.onload = function() {
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-8SD2BXG767');
        };
        document.head.appendChild(gtag);
      });
    </script>

    <style>
      /* Font display optimization */
      @font-face {
        font-family: 'Inter';
        font-display: swap;
      }
    </style>
  </head>
  <body class="bg-dark font-sans">
    <Navigation />
    <div class="pt-16">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-family: 'Inter', system-ui, sans-serif;
  }
  html {
    font-family: var(--font-family);
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
  }
</style>