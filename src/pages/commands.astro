---
import Layout from "../layouts/Layout.astro";

const pageTitle = "CalorieBot Commands - Complete Discord Bot Command Reference";
const pageDescription = "Complete list of CalorieBot Discord commands for food logging, workouts, challenges, progress tracking, and server administration.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main>
    <!-- Hero Section -->
    <section class="relative bg-dark text-white py-8 md:py-12 overflow-hidden">
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-0 right-0 w-1/3 h-48 bg-orange-600/5 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/3 h-48 bg-discord/5 blur-3xl"></div>
      </div>

      <div class="container mx-auto px-4 max-w-4xl text-center relative">
        <div class="space-y-8">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            <span class="inline-block">CalorieBot</span>
            <span class="text-orange-500 inline-block">Commands</span>
          </h1>
          <p class="text-lg md:text-xl lg:text-2xl mb-8 text-gray-300">
            Complete reference guide for all CalorieBot Discord commands.
            From food logging to workouts and community features.
          </p>
        </div>
      </div>
    </section>

    <!-- Commands Categories -->
    <section class="py-12 md:py-20 bg-secondary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Food Logging Commands -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Food Logging Commands</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/log</h3>
              <p class="text-gray-300 text-sm mb-3">Log your meals and track calories</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/log "2 eggs and 3 strips of bacon"</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/log "250g ribeye steak, 180g potatoes"</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/photo</h3>
              <p class="text-gray-300 text-sm mb-3">Upload a photo for AI calorie analysis</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/photo [attach image]</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/adjust</h3>
              <p class="text-gray-300 text-sm mb-3">Fine-tune your food entries</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/adjust last "medium portion"</code>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Workout Commands -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Workout Commands</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/workout</h3>
              <p class="text-gray-300 text-sm mb-3">Start a guided workout session</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/workout equipment:gym time:30</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/workout equipment:bodyweight goal:strength</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/exercise</h3>
              <p class="text-gray-300 text-sm mb-3">Log individual exercises</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/exercise "bench press" sets:3 reps:10 weight:135</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/pr</h3>
              <p class="text-gray-300 text-sm mb-3">Log personal records</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/pr "deadlift" weight:315</code>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Challenge Commands -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Challenge Commands</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/challenge</h3>
              <p class="text-gray-300 text-sm mb-3">Join weekly fitness challenges</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/challenge join</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/challenge status</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/leaderboard</h3>
              <p class="text-gray-300 text-sm mb-3">View challenge leaderboards</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/leaderboard weekly</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/redeem</h3>
              <p class="text-gray-300 text-sm mb-3">Complete redemption challenges</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/redeem "walk 10000 steps"</code>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Progress Commands -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Progress Commands</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/progress</h3>
              <p class="text-gray-300 text-sm mb-3">View your fitness progress</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/progress daily</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/progress weekly</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/stats</h3>
              <p class="text-gray-300 text-sm mb-3">View detailed statistics</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/stats calories</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/stats workouts</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/goals</h3>
              <p class="text-gray-300 text-sm mb-3">Set and track fitness goals</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/goals set calories:2000</code>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Admin Commands -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Admin Commands</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/setup</h3>
              <p class="text-gray-300 text-sm mb-3">Configure CalorieBot settings</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/setup channels</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/setup permissions</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/config</h3>
              <p class="text-gray-300 text-sm mb-3">Manage server configuration</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/config challenges</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/config notifications</code>
                </div>
              </div>
            </div>

            <div class="bg-gray-800 rounded-lg p-6">
              <h3 class="text-xl font-bold text-orange-400 mb-3">/help</h3>
              <p class="text-gray-300 text-sm mb-3">Get help and command list</p>
              <div class="space-y-2 text-sm">
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/help</code>
                </div>
                <div class="bg-gray-700 p-3 rounded">
                  <code class="text-orange-400">/help commands</code>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 md:py-20 bg-dark">
      <div class="container mx-auto px-4 max-w-4xl text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
          Ready to Start Using CalorieBot?
        </h2>
        <p class="text-lg md:text-xl text-gray-300 mb-8">
          Add CalorieBot to your Discord server and start using these commands today.
        </p>
        <a
          href="https://discord.com/api/oauth2/authorize?client_id=123456789&permissions=395137251392&scope=bot%20applications.commands"
          class="inline-block bg-orange-600 hover:bg-orange-500 text-white font-bold py-4 px-10 rounded-full transition-colors text-lg"
        >
          Add CalorieBot Free
        </a>
      </div>
    </section>
  </main>
</Layout>
