        messageField.value = 'Enterprise Private Server Inquiry\n\nI\'m interested in a custom Enterprise plan for my coaching business.\n\nBusiness Details:\n- Number of clients: \n- Business type: \n- Current monthly revenue: \n- Specific requirements: ';
