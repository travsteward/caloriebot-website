          </div>

          <!-- Single image box -->
          <div class="relative">
             <div class="absolute -inset-4 bg-brand-purple/20 blur-3xl rounded-full opacity-20"></div>
            <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl relative z-10 rotate-1 hover:rotate-0 transition-transform duration-500">
              <div class="w-full h-full relative p-2">
                <img
                  src="/images/build_workout.png"
                  alt="AI Workout Builder Demo"
                  class="rounded-xl w-full h-full object-contain bg-dark-900 shadow-inner"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Accountability System Section -->
    <section class="py-24 bg-dark-950 relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Image grid -->
          <div class="order-2 lg:order-1 relative">
             <div class="absolute -inset-4 bg-brand-green/10 blur-3xl rounded-full opacity-20"></div>
            <div class="grid grid-cols-2 gap-4 relative z-10">
              <div class="bg-dark-900 p-2 rounded-2xl border border-white/5 shadow-2xl translate-y-8">
                <img src="/images/challenge_embed.png" alt="Challenge Embed Demo" class="rounded-xl w-full h-auto shadow-lg" />
