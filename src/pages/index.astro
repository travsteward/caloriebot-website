---
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import FeatureCard from "../components/FeatureCard.astro";
import ContactModal from "../components/ContactModal.astro";
import { testimonials } from "../data/testimonials";

// Add Discord client ID
const DISCORD_CLIENT_ID = import.meta.env.DISCORD_CLIENT_ID;

const pageTitle =
  "CalorieBot - AI Discord Fitness Bot for Calorie Tracking";
const pageDescription =
  "CalorieBot: AI-powered Discord fitness bot with photo calorie tracking, workouts, and challenges. Add free and earn 60% commission on subscriptions.";

// Add FAQ schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What is included in the free trial?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "The free trial includes all core features for up to 5 members for 7 days. No credit card is required to start.",
      },
    },
    {
      "@type": "Question",
      name: "How does the affiliate commission work?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Users pay $19.99/month for CalorieBot access. As an admin, you earn 60% commission ($12/month) for every user who subscribes in your server. You keep 60%, we keep 40%.",
      },
    },
    {
      "@type": "Question",
      name: "What features are included in all plans?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "All plans include core features like AI photo calorie tracking, guided workouts, challenge system, and basic community engagement tools.",
      },
    },
    {
      "@type": "Question",
      name: "How do I set up affiliate payments?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Simply connect your Stripe account through our affiliate setup process. Once connected, you'll automatically receive 60% commission on every user subscription in your server.",
      },
    },
  ],
};

// Add structured data properties
const ratingValue = 4.8;
const ratingCount = 127;
const startingPrice = "19.99";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ratingValue={ratingValue}
  ratingCount={ratingCount}
  price={startingPrice}
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <ContactModal id="contact-modal" />
  <main class="overflow-x-hidden">
    <!-- Hero Section -->
    <section class="relative py-20 lg:py-32 overflow-hidden">
      <!-- Hero Background Glow -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-discord/20 blur-[100px]"></div>
        <div class="absolute top-[10%] right-[-5%] w-[30%] h-[30%] rounded-full bg-brand-orange/20 blur-[100px]"></div>
      </div>

      <div class="container mx-auto px-4 max-w-5xl text-center relative z-10">
        <div class="space-y-8">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-sm text-gray-300 backdrop-blur-sm mb-4 animate-fade-in-up">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-green opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-green"></span>
            </span>
            Trusted by 1,000+ Discord Communities
          </div>

          <h1 class="hero-heading font-extrabold mb-6 text-white tracking-tight">
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-gray-400">The Ultimate Fitness Bot</span>
            <span class="block text-discord mt-2">for Your Community</span>
          </h1>

          <p class="text-lg md:text-xl lg:text-2xl mb-8 text-gray-400 max-w-3xl mx-auto leading-relaxed">
            Transform your server with AI-powered calorie tracking, workouts, and challenges.
            <span class="text-white font-medium">Engage your members</span> and <span class="text-brand-orange font-medium">earn 60% commission</span>.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10">
            <a
              href={`https://discord.com/api/oauth2/authorize?client_id=${DISCORD_CLIENT_ID}&permissions=395137251392&scope=bot%20applications.commands`}
              class="group flex items-center gap-3 bg-discord hover:bg-discord/90 text-white text-lg font-semibold py-4 px-8 rounded-full transition-all shadow-lg shadow-discord/25 hover:shadow-discord/40 hover:-translate-y-1"
              onclick="trackDiscordOAuthStart('homepage_hero', 'affiliate')"
            >
              Add to Discord
              <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="#features" class="px-8 py-4 rounded-full text-white font-medium hover:bg-white/5 border border-white/10 transition-all hover:border-white/20">
              View Features
            </a>
          </div>

          <!-- VSL Video Showcase -->
          <div class="mt-20 relative w-full max-w-5xl mx-auto group">
            <div class="relative rounded-2xl overflow-hidden bg-dark-900 border border-white/10 shadow-2xl shadow-discord/10">
              <div class="aspect-video">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube.com/embed/aVk4ZzIw6pk"
                  title="CalorieBot VSL Video"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
             <div class="mt-6 text-center">
                <p class="text-base md:text-lg text-gray-400">
                  See how our powerful daily calorie threads work in <span class="text-white font-medium">under 2 minutes</span>
                </p>
              </div>
          </div>
        </div>
      </div>
    </section>

    <!-- AI-Powered Nutrition Section -->
    <section id="features" class="py-24 bg-dark-900 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="text-discord font-semibold tracking-wider uppercase text-sm">Powered by AI</span>
          <h2 class="section-heading font-bold text-white mt-2">
            AI-Powered Nutrition in Discord
          </h2>
        </div>

        <!-- AI Photo Calorie Counting Section -->
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Text content -->
          <div class="order-2 lg:order-1">
            <div class="flex items-center gap-3 mb-4">
              <div class="p-2 rounded-lg bg-discord/10 text-discord">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <h3 class="text-2xl font-bold text-white">Smart Food Analysis</h3>
            </div>

            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              Simply snap a photo of your meal and let our advanced AI instantly calculate the calories. Our technology recognizes food items, portions, and provides accurate nutritional information in seconds.
            </p>

            <ul class="space-y-4">
              {[
                "Instant Analysis: Get detailed nutritional breakdown in seconds",
                "Smart Adjustments: Fine-tune entries with one-tap editing",
                "Enhanced Context: Add notes, ingredients, and meal details",
                "Scale Integration: Achieve precise measurements for accuracy",
                "Label Reading: Scan nutrition labels for accurate tracking",
                "Real-time Tracking: Monitor progress throughout your day"
              ].map(item => (
                <li class="flex items-start gap-3 text-gray-300">
                  <svg class="w-5 h-5 text-brand-green mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Image grid -->
          <div class="order-1 lg:order-2 relative group">
            <div class="absolute -inset-4 bg-discord/20 blur-3xl rounded-full opacity-20 group-hover:opacity-30 transition-opacity duration-500"></div>
            <div class="grid grid-cols-2 gap-4 relative">
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl rotate-[-2deg] translate-y-4 transition-transform hover:rotate-0 hover:translate-y-0 duration-300">
                <img src="/images/steak.png" alt="AI Food Analysis Demo" class="rounded-xl w-full h-auto shadow-inner" />
              </div>
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl rotate-[2deg] transition-transform hover:rotate-0 duration-300">
                <img src="/images/scale.png" alt="Food Logging Demo" class="rounded-xl w-full h-auto shadow-inner" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Conversational AI Calorie Tracking Section -->
    <section class="py-24 bg-dark-950 relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Chat demo box -->
          <div class="order-2 relative">
            <div class="absolute -inset-4 bg-brand-purple/20 blur-3xl rounded-full opacity-20"></div>
            <div class="bg-dark-800 rounded-2xl p-6 border border-white/5 shadow-2xl relative z-10">
              <!-- Chat interface header -->
              <div class="flex items-center gap-3 mb-6 border-b border-white/5 pb-4">
                <div class="w-10 h-10 rounded-full bg-discord flex items-center justify-center">
                  <span class="text-white font-bold text-lg">CB</span>
                </div>
                <div>
                  <div class="font-bold text-white">CalorieBot</div>
                  <div class="text-xs text-green-400 flex items-center gap-1">
                    <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                    Online
                  </div>
                </div>
              </div>

              <!-- Messages -->
              <div class="space-y-4 mb-6 h-[250px] overflow-hidden relative">
                 <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-full bg-gray-600 flex-shrink-0"></div>
                    <div class="bg-dark-700 rounded-2xl rounded-tl-none p-3 text-gray-200 text-sm max-w-[85%]">
                       2 eggs and 3 strips of bacon
                    </div>
                 </div>
                 <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-full bg-discord flex-shrink-0 flex items-center justify-center text-white text-xs">CB</div>
                    <div class="bg-discord/10 border border-discord/20 rounded-2xl rounded-tl-none p-3 text-gray-200 text-sm max-w-[85%]">
                       <div class="font-bold text-discord mb-1">Breakfast Logged!</div>
                       <div>🥚 2 Large Eggs (143 cal)</div>
                       <div>🥓 3 Strips Bacon (129 cal)</div>
                       <div class="mt-2 text-xs text-gray-400 border-t border-white/5 pt-2">Total: 272 kcal | 19g Protein</div>
                    </div>
                 </div>
              </div>

              <!-- Input box design -->
              <div class="bg-dark-900 p-4 rounded-xl flex items-center gap-3 border border-white/5">
                <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-gray-400">
                   <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                </div>
                <div id="typing-demo" class="flex-1 text-gray-300 font-mono text-sm">
                  <span class="typing-text"></span><span class="typing-cursor">|</span>
                </div>
                <svg class="w-5 h-5 text-discord" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Text content -->
          <div class="order-1">
             <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-purple/10 text-brand-purple text-sm font-medium mb-4 border border-brand-purple/20">
              <span class="w-2 h-2 rounded-full bg-brand-purple animate-pulse"></span>
              Natural Language Input
            </div>
            <h2 class="section-heading font-bold text-white mb-6">
              Chat-Based<br />Calorie Tracking
            </h2>
            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              Skip the manual data entry and complicated food searches. Simply type what you ate in natural language, and our AI instantly calculates the nutritional information.
            </p>

            <div class="grid sm:grid-cols-2 gap-6">
              {[
                { title: "Natural Language", desc: "Just type what you ate naturally" },
                { title: "Instant Calc", desc: "Calories & macros in seconds" },
                { title: "Smart Portions", desc: "AI interprets vague sizes" },
                { title: "Database Free", desc: "No searching required" }
              ].map(item => (
                <div class="flex gap-3">
                   <div class="w-10 h-10 rounded-lg bg-dark-800 border border-white/5 flex items-center justify-center flex-shrink-0 text-brand-purple">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                   </div>
                   <div>
                      <div class="font-bold text-white">{item.title}</div>
                      <div class="text-sm text-gray-400">{item.desc}</div>
                   </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Sharing Section -->
    <section class="py-24 bg-dark-900 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-heading font-bold text-white">
            Social Sharing & Community Engagement
          </h2>
          <p class="text-xl text-gray-400 mt-4 max-w-2xl mx-auto">
             Keep your community engaged with automatic sharing, leaderboards, and progress celebration.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Text content -->
          <div>
            <div class="text-brand-blue font-bold mb-2 tracking-wider uppercase text-sm">Community Connection</div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
              Share Progress,<br />Celebrate Together
            </h2>
            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              Our social sharing features make it easy to celebrate wins, share
              progress, and stay motivated together. From daily tallies to meal
              photos, keep your community engaged and inspired.
            </p>

            <div class="grid gap-6">
              {[
                { title: "Daily Progress", desc: "Automatically share daily calorie & macro totals" },
                { title: "Meal Inspiration", desc: "Share food photos for community ideas" },
                { title: "Milestones", desc: "Celebrate streaks and weight goals" },
                { title: "Support", desc: "Get encouragement from your fitness family" }
              ].map(item => (
                <div class="flex items-start gap-4 p-4 rounded-xl bg-dark-800 border border-white/5 hover:border-brand-blue/30 transition-colors">
                   <div class="mt-1">
                      <svg class="w-5 h-5 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                   </div>
                   <div>
                      <h4 class="font-bold text-white text-base">{item.title}</h4>
                      <p class="text-sm text-gray-400">{item.desc}</p>
                   </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Image grid -->
          <div class="relative">
            <div class="absolute -inset-4 bg-brand-blue/20 blur-3xl rounded-full opacity-20"></div>
            <div class="grid grid-cols-2 gap-4 relative z-10">
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl translate-y-8">
                <img src="/images/tally_sharing.png" alt="Daily Tally Sharing Demo" class="rounded-xl w-full h-auto shadow-lg" />
              </div>
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl">
                <img src="/images/food_sharing.png" alt="Food Sharing Demo" class="rounded-xl w-full h-auto shadow-lg" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Workout Features Section -->
    <section class="py-24 bg-dark-950 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Image grid -->
          <div class="order-2 lg:order-1 relative">
             <div class="absolute -inset-4 bg-brand-orange/10 blur-3xl rounded-full opacity-20"></div>
            <div class="grid grid-cols-2 gap-4 relative z-10">
              <div class="bg-dark-900 p-2 rounded-2xl border border-white/5 shadow-2xl">
                <img src="/images/barbell_workout.png" alt="Barbell Workout Demo" class="rounded-xl w-full h-auto shadow-lg" />
              </div>
              <div class="bg-dark-900 p-2 rounded-2xl border border-white/5 shadow-2xl translate-y-8">
                <img src="/images/workouts_start.png" alt="Workout Start Demo" class="rounded-xl w-full h-auto shadow-lg" />
              </div>
            </div>
          </div>

          <!-- Text content -->
          <div class="order-1 lg:order-2">
            <div class="text-brand-orange font-bold mb-2 tracking-wider uppercase text-sm">Guided Fitness</div>
            <h2 class="section-heading font-bold text-white mb-6">
              AI-Powered Workouts<br />in Discord
            </h2>
            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              Our built-in workout system provides guided exercises, progress
              tracking, and community sharing - all within your Discord server.
              Get step-by-step instructions, track your PRs, and celebrate your
              fitness journey.
            </p>

            <div class="space-y-4">
               {[
                  { title: "Guided Workouts", desc: "Step-by-step exercise instructions with GIFs" },
                  { title: "PR Tracking", desc: "Log and compare personal records automatically" },
                  { title: "Workout Sharing", desc: "Share completed workouts to the community feed" },
                  { title: "Progress Analytics", desc: "Visualize your strength gains over time" }
               ].map(item => (
                  <div class="flex gap-4">
                     <div class="w-8 h-8 rounded-full bg-brand-orange/10 flex items-center justify-center flex-shrink-0 text-brand-orange mt-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                     </div>
                     <div>
                        <h4 class="font-bold text-white">{item.title}</h4>
                        <p class="text-sm text-gray-400">{item.desc}</p>
                     </div>
                  </div>
               ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- AI Workout Builder Section -->
    <section class="py-24 bg-dark-900 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Text content -->
          <div>
            <div class="text-brand-purple font-bold mb-2 tracking-wider uppercase text-sm">AI-Powered Customization</div>
            <h2 class="section-heading font-bold text-white mb-6">
              Personalized Workouts<br />On Demand
            </h2>
            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              Simply tell our AI what equipment you have, your fitness goals,
              and how much time you have. We'll generate the perfect workout
              tailored to your needs.
            </p>

            <div class="grid sm:grid-cols-2 gap-6">
               {[
                  { title: "Equipment-Based", desc: "Works with any setup, from full gyms to bodyweight only" },
                  { title: "Time-Efficient", desc: "Get workouts tailored to your available time slot" },
                  { title: "Goal-Oriented", desc: "Focus on strength, endurance, or specific muscle groups" },
                  { title: "Travel-Friendly", desc: "Perfect for hotel rooms, parks, or on-the-go workouts" }
               ].map(item => (
                  <div class="bg-dark-800 p-4 rounded-xl border border-white/5 hover:border-brand-purple/30 transition-colors group">
                     <div class="mb-2 text-brand-purple group-hover:scale-110 transition-transform origin-left">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
                     </div>
                     <h4 class="font-bold text-white mb-1">{item.title}</h4>
