---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import ContactModal from '../components/ContactModal.astro';

const pageTitle = "CalorieBot Server Consultation";
const pageDescription = "Not sure if CalorieBot is right for you? Book a free 15-minute chat to discuss your community's needs, technical setup, and monetization goals.";

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is this consultation really free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, completely free. We want to help you succeed because when you succeed, we succeed."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need a server already set up?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Since CalorieBot lives inside Discord, you need at least a basic server created so we can help you install and configure it."
      }
    },
    {
      "@type": "Question",
      "name": "Is this a sales call?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No. This is a technical and strategic consultation. We'll tell you honestly if CalorieBot isn't a good fit for your specific use case."
      }
    }
  ]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <ContactModal id="contact-modal" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <main>
    <section class="relative bg-dark text-white py-20 md:py-24 overflow-hidden">
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-brand-orange/20 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-discord/20 blur-[100px]"></div>
      </div>

      <div class="container mx-auto px-4 max-w-5xl relative z-10">
        <div class="text-center mb-12">
