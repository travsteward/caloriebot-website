---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import ContactModal from '../components/ContactModal.astro';

const pageTitle = "CalorieBot Server Setup";
const pageDescription = "We'll set up your server with CalorieBot so you can start monetizing and helping your community immediately. 100% free.";

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is this setup call really free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, completely free. We handle the technical setup because we know it can be tricky. When your community thrives, we all win."
      }
    },
    {
      "@type": "Question",
      "name": "What do I need before the call?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Just a Discord server with admin permissions. We'll handle the rest‚Äîadding the bot, configuring channels, setting up commands, and making sure everything works perfectly."
      }
    },
    {
      "@type": "Question",
      "name": "Why can't I just set it up myself?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You can! But most server owners get stuck on permissions, channel config, or the /setup command. This call eliminates all that frustration‚Äîwe configure everything live so you're ready to launch immediately."
      }
    }
  ]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <ContactModal id="contact-modal" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <main>
    <section class="relative bg-dark text-white py-20 md:py-24 overflow-hidden">
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-brand-orange/20 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-discord/20 blur-[100px]"></div>
      </div>

      <div class="container mx-auto px-4 max-w-5xl relative z-10">
        <div class="text-center mb-12">
          <h1 class="hero-heading font-extrabold mb-6 tracking-tight">
            We'll Set It Up
            <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-orange to-brand-purple">For You</span>
          </h1>
          <p class="text-xl md:text-2xl mb-4 text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Struggling with <code class="text-brand-orange bg-white/5 px-2 py-0.5 rounded">/setup</code>? We'll jump into your server and configure everything‚Äîlive, via Discord.
          </p>
          <p class="text-lg text-brand-green font-semibold">
            100% Free. You leave ready to launch.
          </p>
        </div>

        <!-- Value Props Grid -->
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-dark-900/80 backdrop-blur-sm rounded-2xl p-6 border border-white/10 text-center">
            <div class="text-3xl mb-4">üõ†Ô∏è</div>
            <h3 class="text-lg font-bold text-white mb-2">Done-For-You</h3>
            <p class="text-gray-400 text-sm">We handle the /setup command, channel config, and permissions. You just watch it happen.</p>
          </div>
          <div class="bg-dark-900/80 backdrop-blur-sm rounded-2xl p-6 border border-white/10 text-center">
            <div class="text-3xl mb-4">üöÄ</div>
            <h3 class="text-lg font-bold text-white mb-2">Launch Today</h3>
            <p class="text-gray-400 text-sm">Walk away ready to run your first challenge or start collecting subscriptions immediately.</p>
          </div>
          <div class="bg-dark-900/80 backdrop-blur-sm rounded-2xl p-6 border border-white/10 text-center">
            <div class="text-3xl mb-4">üí∞</div>
            <h3 class="text-lg font-bold text-white mb-2">Start Earning</h3>
            <p class="text-gray-400 text-sm">Your payment links, challenge structures, and monetization‚Äîall configured and tested before we hang up.</p>
          </div>
        </div>

        <!-- What We'll Set Up -->
        <div class="bg-dark-900/50 border border-white/5 rounded-2xl p-8 mb-16 max-w-4xl mx-auto">
          <h2 class="text-xl font-bold text-white text-center mb-8">What We'll Set Up Together</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <span class="text-brand-green mt-1">‚úì</span>
                <span class="text-gray-300"><strong>Bot Installation:</strong> We add CalorieBot to your server with correct permissions‚Äîno guessing</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-brand-green mt-1">‚úì</span>
                <span class="text-gray-300"><strong>Channel Config:</strong> Dedicated tracking channels, leaderboards, and admin areas set up exactly right</span>
              </li>
            </ul>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <span class="text-brand-green mt-1">‚úì</span>
                <span class="text-gray-300"><strong>Monetization Ready:</strong> Challenges, subscriptions, or pay-per-log‚Äîconfigured and tested live</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-brand-green mt-1">‚úì</span>
                <span class="text-gray-300"><strong>First Log Test:</strong> We won't hang up until you've seen a member log work end-to-end</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Calendar Embed -->
        <div class="bg-dark-900 rounded-3xl border border-white/10 shadow-2xl overflow-hidden mb-12">
          <div class="p-4 md:p-8">
            <!-- Cal inline embed code begins -->
            <div style="width:100%;height:100%;overflow:scroll" id="my-cal-inline-consultation"></div>
            <script type="text/javascript">
              (function (C, A, L) { let p = function (a, ar) { a.q.push(ar); }; let d = C.document; C.Cal = C.Cal || function () { let cal = C.Cal; let ar = arguments; if (!cal.loaded) { cal.ns = {}; cal.q = cal.q || []; d.head.appendChild(d.createElement("script")).src = A; cal.loaded = true; } if (ar[0] === L) { const api = function () { p(api, arguments); }; const namespace = ar[1]; api.q = api.q || []; if(typeof namespace === "string"){cal.ns[namespace] = cal.ns[namespace] || api;p(cal.ns[namespace], ar);p(cal, ["initNamespace", namespace]);} else p(cal, ar); return;} p(cal, ar); }; })(window, "https://app.cal.com/embed/embed.js", "init");
              Cal("init", "consultation", {origin:"https://app.cal.com"});

              Cal.ns.consultation("inline", {
                elementOrSelector:"#my-cal-inline-consultation",
                config: {"layout":"month_view", "theme":"dark"},
                calLink: "paybot/consultation",
              });

              Cal.ns.consultation("ui", {"hideEventTypeDetails":false,"layout":"month_view", "theme":"dark"});
            </script>
            <!-- Cal inline embed code ends -->
          </div>
        </div>

        <!-- How It Works -->
        <div class="bg-discord/10 border border-discord/20 rounded-2xl p-8 text-center max-w-3xl mx-auto mb-20">
          <h3 class="text-xl font-bold text-white mb-4">How It Works</h3>
          <p class="text-gray-300 mb-6">
            Book a time, then we'll meet in our <strong class="text-white">Support Server</strong>. You'll screenshare your server, and we'll walk you through everything‚Äîor just do it for you. Either way, you leave with CalorieBot fully running.
          </p>
          <a
            href="https://discord.gg/caloriebot"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-discord hover:bg-discord/90 text-white font-bold py-3 px-8 rounded-full transition-all hover:-translate-y-1 shadow-lg shadow-discord/20"
            onclick="if(typeof trackSupportServerJoin === 'function') trackSupportServerJoin('setup_page_cta');"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.086 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.086 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
            Join Support Server First
          </a>
        </div>

        <!-- FAQ Section -->
        <div class="max-w-3xl mx-auto border-t border-white/10 pt-16">
          <h2 class="text-2xl font-bold text-white text-center mb-8">Frequently Asked Questions</h2>
          <div class="grid gap-4">
            {faqSchema.mainEntity.map((faq) => (
              <div class="bg-dark-900/50 border border-white/5 rounded-xl p-6">
                <h3 class="text-white font-bold mb-2">{faq.name}</h3>
                <p class="text-gray-400 text-sm">{faq.acceptedAnswer.text}</p>
              </div>
            ))}
          </div>
        </div>

      </div>
    </section>
  </main>
</Layout>

<script>
  // Declare gtag for TypeScript
  declare global {
    function gtag(command: string, targetId: string, parameters?: Record<string, any>): void;
  }

  // Track setup page view
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof gtag !== 'undefined') {
      gtag('event', 'page_view', {
        page_title: 'CalorieBot Server Setup',
        page_location: window.location.href,
        content_group: 'setup',
        referrer: document.referrer,
        timestamp: new Date().toISOString()
      });

      // Track setup page view as custom event
      gtag('event', 'setup_page_view', {
        page_title: 'CalorieBot Server Setup',
        page_location: window.location.href,
        content_group: 'setup',
        referrer: document.referrer,
        timestamp: new Date().toISOString()
      });
    }

    // Track calendar interaction when calendar loads
    const calendarContainer = document.getElementById('my-cal-inline-consultation');
    if (calendarContainer) {
      // Use MutationObserver to detect when calendar is loaded
      const observer = new MutationObserver(function(mutations) {
        if (calendarContainer.children.length > 0) {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'setup_calendar_interaction', {
              interaction_type: 'calendar_view',
              page_location: window.location.href,
              timestamp: new Date().toISOString()
            });
          }
          observer.disconnect();
        }
      });

      observer.observe(calendarContainer, {
        childList: true,
        subtree: true
      });

      // Also track clicks on calendar (date/time selection)
      calendarContainer.addEventListener('click', function(e) {
        if (typeof gtag !== 'undefined') {
          const target = e.target as HTMLElement;
          // Check if clicking on a date or time slot
          if (target.closest('[data-cal-date]') || target.closest('[data-cal-time]')) {
            gtag('event', 'setup_calendar_interaction', {
              interaction_type: 'date_click',
              page_location: window.location.href,
              timestamp: new Date().toISOString()
            });
          }
        }
      });

      // Track scrolling within calendar
      let scrollTimeout: ReturnType<typeof setTimeout>;
      calendarContainer.addEventListener('scroll', function() {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(function() {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'setup_calendar_interaction', {
              interaction_type: 'calendar_scroll',
              page_location: window.location.href,
              timestamp: new Date().toISOString()
            });
          }
        }, 500); // Debounce scroll tracking
      });
    }
  });

  // Track support server join click
  window.trackSupportServerJoin = function(location: string) {
    if (typeof gtag !== 'undefined') {
      gtag('event', 'support_server_join_click', {
        link_url: 'https://discord.gg/caloriebot',
        link_location: location,
        page_context: 'setup_booking',
        page_location: window.location.href,
        timestamp: new Date().toISOString()
      });

      // Also track as outbound link click for consistency
      gtag('event', 'outbound_link_click', {
        link_url: 'https://discord.gg/caloriebot',
        link_location: location,
        page_context: 'setup_booking',
        page_location: window.location.href,
        timestamp: new Date().toISOString()
      });
    }
  };
</script>
