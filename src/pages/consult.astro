        <div class="bg-dark-900 rounded-3xl border border-white/10 shadow-2xl overflow-hidden mb-12">
          <div class="p-4 md:p-8">
            <!-- Cal inline embed code begins -->
            <div style="width:100%;height:100%;overflow:scroll" id="my-cal-inline-strategy-session"></div>
            <script type="text/javascript">
