---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";

const pageTitle = "CalorieBot Blog - AI Fitness & Discord Community Tips";
const pageDescription = "Expert insights on building fitness communities, AI nutrition tracking, and maximizing Discord server engagement for fitness coaches and community leaders.";

// Import all markdown blog posts
const allPosts = await import.meta.glob('./*.md', { eager: true });

// Transform imported posts into the format we need
const posts = Object.entries(allPosts).map(([path, post]) => {
  const slug = path.replace('./', '').replace('.md', '');
  const frontmatter = post.frontmatter || {};

  return {
    title: frontmatter.title || 'Untitled',
    slug: slug,
    description: frontmatter.description || '',
    publishedDate: frontmatter.publishedDate || '2024-01-01',
    author: frontmatter.author || 'CalorieBot Team',
    authorImage: frontmatter.authorImage || '/avatars/caloriebot-team.svg',
    coverImage: frontmatter.coverImage || '/blog/covers/thriving_community.png',
    coverImageAlt: frontmatter.coverImageAlt || frontmatter.title || '',
    tags: frontmatter.tags || []
  };
});

// Sort posts by date (newest first)
const sortedPosts = [...posts].sort((a, b) =>
  new Date(`${b.publishedDate}T12:00:00Z`).getTime() - new Date(`${a.publishedDate}T12:00:00Z`).getTime()
);
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <main class="relative bg-dark">
    <!-- Hero Section -->
    <section class="relative py-20 overflow-hidden">
        <div class="absolute inset-0" aria-hidden="true">
          <div class="absolute top-0 right-0 w-1/3 h-48 bg-orange-600/5 blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-1/3 h-48 bg-discord/5 blur-3xl"></div>
        </div>

        <div class="container mx-auto px-4 max-w-6xl relative z-10 text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
              Fitness Community
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-orange to-brand-purple">Insights</span>
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
              Expert tips, guides, and insights on building thriving fitness communities and leveraging AI for better health outcomes.
            </p>
        </div>
    </section>

    <!-- Blog Grid -->
    <section class="pb-24 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map(post => (
            <article class="bg-secondary rounded-2xl overflow-hidden border border-white/5 hover:border-white/10 hover:transform hover:scale-[1.02] transition-all duration-300 shadow-lg group">
              <a href={`/blog/${post.slug}/`} class="block h-full flex flex-col">
                <div class="relative h-48 overflow-hidden">
                  <img
                    src={post.coverImage}
                    alt={post.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-dark-900/80 to-transparent opacity-60"></div>
                </div>

                <div class="p-6 flex-1 flex flex-col">
                  <div class="mb-4 flex flex-wrap gap-2">
                    {post.tags.map(tag => (
                      <span class="inline-block bg-brand-orange/10 text-brand-orange border border-brand-orange/20 rounded-full px-3 py-1 text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h2 class="text-xl font-bold text-white mb-3 line-clamp-2 group-hover:text-brand-orange transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-gray-400 mb-6 line-clamp-3 text-sm flex-1">
                    {post.description}
                  </p>

                  <div class="flex items-center gap-3 mt-auto pt-4 border-t border-white/5">
                    <img
                      src={post.authorImage}
                      alt={`${post.author}'s profile picture`}
                      class="w-8 h-8 rounded-full object-cover bg-dark-800"
                    />
                    <div class="text-xs">
                      <div class="text-white font-medium">{post.author}</div>
                      <time datetime={post.publishedDate} class="text-gray-500">
                        {new Date(`${post.publishedDate}T12:00:00Z`).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
