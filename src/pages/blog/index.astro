---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";

const pageTitle = "CalorieBot Blog - AI Fitness & Discord Community Tips";
const pageDescription = "Expert insights on building fitness communities, AI nutrition tracking, and maximizing Discord server engagement for fitness coaches and community leaders.";

// Import all markdown blog posts
const allPosts = await import.meta.glob('./*.md', { eager: true });

// Transform imported posts into the format we need
const posts = Object.entries(allPosts).map(([path, post]) => {
  const slug = path.replace('./', '').replace('.md', '');
  const frontmatter = post.frontmatter || {};

  return {
    title: frontmatter.title || 'Untitled',
    slug: slug,
    description: frontmatter.description || '',
    publishedDate: frontmatter.publishedDate || '2024-01-01',
    author: frontmatter.author || 'CalorieBot Team',
    authorImage: frontmatter.authorImage || '/avatars/caloriebot-team.svg',
    coverImage: frontmatter.coverImage || '/blog/covers/thriving_community.png',
    coverImageAlt: frontmatter.coverImageAlt || frontmatter.title || '',
    tags: frontmatter.tags || []
  };
});

// Sort posts by date (newest first)
const sortedPosts = [...posts].sort((a, b) =>
  new Date(`${b.publishedDate}T12:00:00Z`).getTime() - new Date(`${a.publishedDate}T12:00:00Z`).getTime()
);
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <main class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Fitness Community Insights
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Expert tips, guides, and insights on building thriving fitness communities and leveraging AI for better health outcomes.
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map(post => (
        <article class="bg-secondary rounded-xl overflow-hidden hover:transform hover:scale-[1.02] transition-all">
          <a href={`/blog/${post.slug}/`} class="block">
            <img
              src={post.coverImage}
              alt={post.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="mb-4">
                {post.tags.map(tag => (
                  <span class="inline-block bg-orange-600/10 text-orange-500 rounded-full px-3 py-1 text-sm mr-2 mb-2">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-xl font-bold text-white mb-2 line-clamp-2">
                {post.title}
              </h2>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {post.description}
              </p>
              <div class="flex items-center gap-3">
                <img
                  src={post.authorImage}
                  alt={`${post.author}'s profile picture`}
                  class="w-8 h-8 rounded-full object-cover"
                />
                <div class="text-sm">
                  <div class="text-white">{post.author}</div>
                  <time datetime={post.publishedDate} class="text-gray-400">
                    {new Date(`${post.publishedDate}T12:00:00Z`).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>