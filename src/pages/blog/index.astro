---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";

const pageTitle = "CalorieBot Blog - AI Fitness & Discord Community Tips";
const pageDescription = "Expert insights on building fitness communities, AI nutrition tracking, and maximizing Discord server engagement for fitness coaches and community leaders.";

// Blog posts array
const posts = [
  {
    title: "The 6-Week Challenge Revolution: Bringing the Personal Training Studio to Discord",
    slug: "six-week-challenge-revolution",
    description: "After 15 years running a personal training studio, I've found the perfect way to recreate that magic digitally. Here's why 6-week challenges are the most powerful community-building tool you've never used.",
    publishedDate: "2024-11-12",
    author: "CalorieBot Team",
    authorImage: "/authors/team.svg",
    coverImage: "/blog/covers/6-week-challenge-blog.png",
    coverImageAlt: "A diverse group celebrating their fitness transformation after completing a 6-week challenge",
    tags: ["Community", "Business", "Fitness"]
  },
  {
    title: "How to Build an Engaged Fitness Community on Discord",
    slug: "build-engaged-fitness-community-discord",
    description: "Learn the key strategies to create, grow, and maintain an active fitness community on Discord. From setting up channels to organizing challenges.",
    publishedDate: "2024-03-20",
    author: "CalorieBot Team",
    authorImage: "/authors/team.svg",
    coverImage: "/blog/covers/thriving_community.png",
    coverImageAlt: "A thriving fitness community sharing their progress and supporting each other",
    tags: ["Community"]
  },
  {
    title: "AI Photo Calorie Tracking: The Future of Nutrition Logging",
    slug: "ai-photo-calorie-tracking-future",
    description: "Discover how AI is revolutionizing nutrition tracking through photo recognition technology and why it's becoming the preferred method for fitness enthusiasts.",
    publishedDate: "2024-03-18",
    author: "CalorieBot Team",
    authorImage: "/authors/team.svg",
    coverImage: "/blog/covers/ai_photo_tracking.png",
    coverImageAlt: "AI analyzing a food photo to calculate calories and nutrition information",
    tags: ["Technology", "Fitness"]
  },
  {
    title: "Complete Guide to Monetizing Your Fitness Community",
    slug: "monetizing-fitness-community-guide",
    description: "Learn how to turn your fitness community into a sustainable business with proven monetization strategies.",
    publishedDate: "2024-03-22",
    author: "CalorieBot Team",
    authorImage: "/authors/team.svg",
    coverImage: "/blog/covers/monetize_discord.png",
    coverImageAlt: "Discord server monetization dashboard showing revenue streams and member engagement",
    tags: ["Business", "Community"]
  }
];

// Sort posts by date (newest first)
const sortedPosts = [...posts].sort((a, b) =>
  new Date(`${b.publishedDate}T12:00:00Z`).getTime() - new Date(`${a.publishedDate}T12:00:00Z`).getTime()
);
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <main class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Fitness Community Insights
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Expert tips, guides, and insights on building thriving fitness communities and leveraging AI for better health outcomes.
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map(post => (
        <article class="bg-secondary rounded-xl overflow-hidden hover:transform hover:scale-[1.02] transition-all">
          <a href={`/blog/${post.slug}/`} class="block">
            <img
              src={post.coverImage}
              alt={post.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="mb-4">
                {post.tags.map(tag => (
                  <span class="inline-block bg-orange-600/10 text-orange-500 rounded-full px-3 py-1 text-sm mr-2 mb-2">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-xl font-bold text-white mb-2 line-clamp-2">
                {post.title}
              </h2>
              <p class="text-gray-400 mb-4 line-clamp-3">
                {post.description}
              </p>
              <div class="flex items-center gap-3">
                <img
                  src={post.authorImage}
                  alt={`${post.author}'s profile picture`}
                  class="w-8 h-8 rounded-full object-cover"
                />
                <div class="text-sm">
                  <div class="text-white">{post.author}</div>
                  <time datetime={post.publishedDate} class="text-gray-400">
                    {new Date(`${post.publishedDate}T12:00:00Z`).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>