<script>
  document.addEventListener("DOMContentLoaded", () => {
    const phrases = [
      "2 eggs and 3 strips of bacon",
      "250g ribeye steak, 180g potatoes",
    ];

    const typingDemo = document.querySelector(".typing-text");
    let phraseIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typingSpeed = 100;

    function typeText() {
      const currentPhrase = phrases[phraseIndex];

      if (isDeleting) {
        typingDemo.textContent = currentPhrase.substring(0, charIndex - 1);
        charIndex--;
        typingSpeed = 50;
      } else {
        typingDemo.textContent = currentPhrase.substring(0, charIndex + 1);
        charIndex++;
        typingSpeed = 100;
      }

      if (!isDeleting && charIndex === currentPhrase.length) {
        isDeleting = true;
        typingSpeed = 1000;
      }

      if (isDeleting && charIndex === 0) {
        isDeleting = false;
        phraseIndex = (phraseIndex + 1) % phrases.length;
        typingSpeed = 500;
      }

      setTimeout(typeText, typingSpeed);
    }

    typeText();
  });
</script>

