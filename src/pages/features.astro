---
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import FeatureCard from "../components/FeatureCard.astro";

const pageTitle = "CalorieBot Features - AI-Powered Discord Fitness Bot";
const pageDescription = "Discover all the powerful features of CalorieBot: AI photo calorie tracking, guided workouts, challenges, community engagement, and more. Transform your Discord server into a fitness community.";

// Add FAQ schema for features
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What AI features does CalorieBot offer?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "CalorieBot offers AI photo calorie counting, conversational calorie tracking, and AI-powered workout generation based on your equipment and goals.",
      },
    },
    {
      "@type": "Question",
      name: "Can users track workouts in Discord?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes, CalorieBot includes built-in workout functionality with guided exercises, PR tracking, and workout sharing within Discord.",
      },
    },
    {
      "@type": "Question",
      name: "What community features are available?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Community features include daily progress sharing, meal photo sharing, milestone celebrations, weekly challenges, and leaderboards.",
      },
    },
    {
      "@type": "Question",
      name: "How does the challenge system work?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "The challenge system automatically tracks nutrition and workout data, sets daily targets, and includes redemption challenges with community-approved tasks.",
      },
    },
  ],
};

// Add structured data properties
const ratingValue = 4.8;
const ratingCount = 127;
const startingPrice = "19.99";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ratingValue={ratingValue}
  ratingCount={ratingCount}
  price={startingPrice}
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-dark text-white py-8 md:py-12 overflow-hidden">
      <!-- Subtle decorative elements -->
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-0 right-0 w-1/3 h-48 bg-orange-600/5 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/3 h-48 bg-discord/5 blur-3xl"></div>
      </div>

      <div class="container mx-auto px-4 max-w-4xl text-center relative">
        <div class="space-y-8">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            <span class="inline-block">Complete Feature</span>
            <span class="text-orange-500 inline-block">Overview</span>
          </h1>
          <p class="text-lg md:text-xl lg:text-2xl mb-8 text-gray-300">
            Discover all the powerful features that make CalorieBot the ultimate Discord fitness bot.
            From AI-powered nutrition tracking to community challenges, explore everything CalorieBot has to offer.
          </p>
        </div>
      </div>
    </section>

    <!-- AI-Powered Nutrition Section -->
    <div class="section-divider"></div>
    <section class="py-12 md:py-20 bg-secondary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
            AI-Powered Nutrition Tracking
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          <!-- AI Photo Calorie Counting -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">Smart Food Analysis</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">AI Photo Calorie Counting</h3>
            <p class="text-gray-300 mb-4">
              Simply snap a photo of your meal and let our advanced AI instantly calculate the calories.
              Our technology recognizes food items, portions, and provides accurate nutritional information in seconds.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Instant Analysis: Get detailed nutritional breakdown in seconds</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Smart Adjustments: Fine-tune entries with one-tap editing</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Label Reading: Scan nutrition labels for accurate tracking</span>
              </li>
            </ul>
          </div>

          <!-- Chat-Based Tracking -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">Natural Language Input</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">Chat-Based Calorie Tracking</h3>
            <p class="text-gray-300 mb-4">
              Skip the manual data entry and complicated food searches. Simply type what you ate in natural language,
              and our AI instantly calculates the nutritional information.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Natural language understanding for quick entries</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Instant calorie and macro calculations</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Smart portion size interpretation</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Workout Features Section -->
    <div class="section-divider"></div>
    <section class="py-12 md:py-20 bg-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
            Built-In Workout Functionality
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          <!-- Guided Workouts -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">Guided Fitness</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">AI-Powered Workouts in Discord</h3>
            <p class="text-gray-300 mb-4">
              Our built-in workout system provides guided exercises, progress tracking, and community sharing -
              all within your Discord server.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Guided Workouts: Step-by-step exercise instructions</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>PR Tracking: Log and compare personal records</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Workout Sharing: Celebrate completed workouts</span>
              </li>
            </ul>
          </div>

          <!-- AI Workout Builder -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">AI-Powered Customization</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">Personalized Workouts On Demand</h3>
            <p class="text-gray-300 mb-4">
              Simply tell our AI what equipment you have, your fitness goals, and how much time you have.
              We'll generate the perfect workout tailored to your needs.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Equipment-Based: Works with any setup</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Time-Efficient: Tailored to your available time</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Goal-Oriented: Focus on specific objectives</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Features Section -->
    <div class="section-divider"></div>
    <section class="py-12 md:py-20 bg-secondary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
            Community Engagement Features
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          <!-- Social Sharing -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">Community Connection</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">Share Your Progress & Celebrate Together</h3>
            <p class="text-gray-300 mb-4">
              Our social sharing features make it easy to celebrate wins, share progress, and stay motivated together.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Daily Progress Sharing: Automatically share your daily totals</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Meal Inspiration: Share your food photos for community ideas</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Milestone Celebrations: Automatically highlight big achievements</span>
              </li>
            </ul>
          </div>

          <!-- Challenge System -->
          <div class="bg-gray-800/50 rounded-xl p-6 lg:p-8">
            <div class="text-indigo-400 font-semibold mb-2">Gamified Fitness</div>
            <h3 class="text-2xl md:text-3xl font-semibold mb-4 text-white">Weekly Challenges Built for Engagement</h3>
            <p class="text-gray-300 mb-4">
              Our challenge system keeps your community motivated through friendly competition and accountability.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Auto-Pull Progress: Challenges automatically track nutrition and workout data</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Daily Targets: Track calories, workouts, steps, and protein</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-indigo-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Leaderboards: Friendly competition to keep everyone motivated</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Features Section -->
    <div class="section-divider"></div>
    <section class="py-12 md:py-20 bg-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
            Additional Features
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
          <!-- Progress Photos -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Visual Progress</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Progress Photos</h3>
            <p class="text-gray-300 text-sm">
              Track your transformation with progress photos and share your journey with the community.
            </p>
          </div>

          <!-- Weight Tracking -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Body Metrics</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Weight Tracking</h3>
            <p class="text-gray-300 text-sm">
              Monitor your weight changes over time with detailed tracking and progress visualization.
            </p>
          </div>

          <!-- Nutrition Analysis -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Detailed Insights</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Nutrition Analysis</h3>
            <p class="text-gray-300 text-sm">
              Get comprehensive nutritional breakdowns including macros, vitamins, and minerals.
            </p>
          </div>

          <!-- Custom Goals -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Personalization</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Custom Goals</h3>
            <p class="text-gray-300 text-sm">
              Set personalized fitness and nutrition goals tailored to your specific needs and preferences.
            </p>
          </div>

          <!-- Data Export -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Data Management</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Data Export</h3>
            <p class="text-gray-300 text-sm">
              Export your nutrition and workout data for analysis with other fitness apps and tools.
            </p>
          </div>

          <!-- Admin Controls -->
          <div class="bg-gray-800/50 rounded-xl p-6">
            <div class="text-indigo-400 font-semibold mb-2">Server Management</div>
            <h3 class="text-xl font-semibold mb-3 text-white">Admin Controls</h3>
            <p class="text-gray-300 text-sm">
              Comprehensive admin controls for managing your Discord server and CalorieBot settings.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <div class="section-divider"></div>
    <section class="py-12 md:py-20 bg-secondary">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
          Ready to Transform Your Discord Server?
        </h2>
        <p class="text-lg md:text-xl text-gray-300 mb-8">
          Join thousands of Discord servers already using CalorieBot to build engaged fitness communities.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://discord.com/api/oauth2/authorize?client_id=123456789&permissions=395137251392&scope=bot%20applications.commands"
            class="inline-flex items-center gap-2 bg-orange-600 hover:bg-orange-500 text-white text-lg font-bold py-3 px-8 rounded-full transition-all duration-200"
          >
            Add CalorieBot Free
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="/pricing/"
            class="inline-flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-white text-lg font-bold py-3 px-8 rounded-full transition-all duration-200"
          >
            View Pricing
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .section-divider {
    height: 2px;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    margin: 0 auto;
    width: 100%;
    max-width: 1200px;
    opacity: 0.7;
  }
</style>
