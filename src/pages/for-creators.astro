---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import FeatureCard from '../components/FeatureCard.astro';
import ContactModal from '../components/ContactModal.astro';

// Add Discord client ID
const DISCORD_CLIENT_ID = import.meta.env.DISCORD_CLIENT_ID;

const pageTitle = "Monetize Your Fitness Community | CalorieBot for Creators";
const pageDescription = "Turn your Discord fitness community into a profitable business. Choose between affiliate commissions or personal server setup to generate revenue.";

// Add structured data properties
const ratingValue = 4.8;
const ratingCount = 127;
const startingPrice = "20.00";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ratingValue={ratingValue}
  ratingCount={ratingCount}
  price={startingPrice}
  type="website"
  image="/images/for-creators-preview.jpg"
>
  <ContactModal id="contact-modal" />
  <main>
    <section class="relative bg-dark text-white py-16 overflow-hidden">
      <!-- Subtle decorative elements that match the theme -->
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-0 right-0 w-1/3 h-48 bg-orange-600/5 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/3 h-48 bg-discord/5 blur-3xl"></div>
      </div>

      <div class="container mx-auto px-4 max-w-4xl relative">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Choose Your
          <br />
          <span class="text-orange-500">Revenue Model</span>
        </h1>
        <p class="text-xl md:text-2xl mb-12 text-gray-300">Turn your fitness community into a profitable business. Earn commissions from members or run your own coaching server.</p>

        <div class="grid md:grid-cols-3 gap-8 mb-16">
          <div class="bg-secondary rounded-lg p-8 text-center">
            <div class="text-4xl mb-4">üí∞</div>
            <h3 class="text-2xl font-bold text-white mb-4">Affiliate Commissions</h3>
            <p class="text-gray-300 mb-6">Build communities and earn $12/month per member who subscribes. Passive income that scales automatically.</p>
            <ul class="text-left text-gray-300 space-y-2 mb-6">
              <li>‚Ä¢ 60% commission on every subscription</li>
              <li>‚Ä¢ Users pay $20/month, you earn $12</li>
              <li>‚Ä¢ Stripe Connect handles payouts</li>
              <li>‚Ä¢ No limit to community size</li>
              <li>‚Ä¢ Recurring monthly income</li>
            </ul>
            <div class="bg-dark/50 p-3 rounded-lg mb-4">
              <p class="text-sm text-gray-400">Example: 100 members = $1,200/month</p>
            </div>
            <a
              href="/affiliate/"
              class="inline-block bg-orange-600 hover:bg-orange-500 text-white font-bold py-3 px-6 rounded-full transition-colors"
            >
              Start Earning Commissions
            </a>
          </div>

          <div class="bg-secondary rounded-lg p-8 text-center">
            <div class="text-4xl mb-4">üè†</div>
            <h3 class="text-2xl font-bold text-white mb-4">Private Coaching Server</h3>
            <p class="text-gray-300 mb-6">Buy seats wholesale, create premium pricing tiers, and keep 90%+ profit margins on coaching services.</p>
            <ul class="text-left text-gray-300 space-y-2 mb-6">
              <li>‚Ä¢ Buy seats for $20 first + $12 each</li>
              <li>‚Ä¢ Charge $80-250/month per client</li>
              <li>‚Ä¢ 4-12x markup on CalorieBot costs</li>
              <li>‚Ä¢ Full client data visibility</li>
              <li>‚Ä¢ Scale from 25 to 100+ clients</li>
            </ul>
            <div class="bg-dark/50 p-3 rounded-lg mb-4">
              <p class="text-sm text-green-400">Example: 50 clients √ó $150 = $7,500/month revenue</p>
            </div>
            <a
              href="/for-coaches/"
              class="inline-block bg-discord hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-full transition-colors"
            >
              Build Coaching Business
            </a>
          </div>

          <div class="bg-secondary rounded-lg p-8 text-center">
            <div class="text-4xl mb-4">üèãÔ∏è</div>
            <h3 class="text-2xl font-bold text-white mb-4">6-Week Challenge System</h3>
            <p class="text-gray-300 mb-6">Run time-limited fitness challenges that drive massive engagement and one-time revenue ($97-297 per participant).</p>
            <ul class="text-left text-gray-300 space-y-2 mb-6">
              <li>‚Ä¢ Low commitment for users (6 weeks only)</li>
              <li>‚Ä¢ AI automation (zero tracking burden)</li>
              <li>‚Ä¢ Run quarterly for recurring revenue</li>
              <li>‚Ä¢ Convert participants to monthly members</li>
              <li>‚Ä¢ Creates maximum "glue" between members</li>
            </ul>
            <div class="bg-dark/50 p-3 rounded-lg mb-4">
              <p class="text-sm text-orange-400">Example: 40 participants √ó $197 = $7,880 per challenge</p>
            </div>
            <a
              href="/six-week-challenges/"
              class="inline-block bg-orange-600 hover:bg-orange-500 text-white font-bold py-3 px-6 rounded-full transition-colors"
            >
              Run 6-Week Challenges
            </a>
          </div>
        </div>

        <!-- Comparison Table -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold mb-8 text-center">Compare Revenue Models</h2>
          <div class="overflow-x-auto">
            <table class="w-full bg-secondary rounded-lg overflow-hidden">
              <thead class="bg-dark">
                <tr>
                  <th class="px-6 py-4 text-left text-white font-bold">Feature</th>
                  <th class="px-6 py-4 text-center text-white font-bold">Affiliate Commissions</th>
                  <th class="px-6 py-4 text-center text-white font-bold">Private Coaching</th>
                  <th class="px-6 py-4 text-center text-white font-bold">6-Week Challenges</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-700">
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">Setup Required</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Stripe Connect + community</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Add bot + set pricing</td>
                  <td class="px-6 py-4 text-center text-green-400 text-sm">Create challenge in /setup</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">Revenue Type</td>
                  <td class="px-6 py-4 text-center text-orange-400 text-sm">$12/mo recurring</td>
                  <td class="px-6 py-4 text-center text-orange-400 text-sm">$80-250/mo recurring</td>
                  <td class="px-6 py-4 text-center text-orange-400 text-sm">$97-297 one-time</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">Profit Margins</td>
                  <td class="px-6 py-4 text-center text-green-400 text-sm">100% (pure profit)</td>
                  <td class="px-6 py-4 text-center text-green-400 text-sm">90%+ (minus seats)</td>
                  <td class="px-6 py-4 text-center text-green-400 text-sm">60% (Make Money) or 100% (Coach)</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">User Commitment</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Ongoing monthly</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Ongoing monthly</td>
                  <td class="px-6 py-4 text-center text-green-400 text-sm">6 weeks only</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">Best For</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Content creators</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Coaches, consultants</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">All (engagement tool)</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-gray-300 font-semibold">Frequency</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Continuous</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Continuous</td>
                  <td class="px-6 py-4 text-center text-gray-300 text-sm">Quarterly or monthly</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Revenue Examples -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold mb-8 text-center">Real Revenue Potential</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gradient-to-br from-orange-900/20 to-orange-800/20 rounded-lg p-8 border border-orange-500/30">
              <h3 class="text-2xl font-bold text-white mb-6 text-center">Affiliate Commissions</h3>
              <p class="text-center text-gray-300 mb-6">Build once, earn forever</p>
              <div class="space-y-4">
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Small community (50 members)</span>
                    <span class="text-orange-400 font-bold text-lg">$600/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Perfect for niche fitness communities</p>
                </div>
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Growing community (200 members)</span>
                    <span class="text-orange-400 font-bold text-lg">$2,400/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Established fitness influencer income</p>
                </div>
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Large community (500+ members)</span>
                    <span class="text-orange-400 font-bold text-lg">$6,000+/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Full-time income from content creation</p>
                </div>
              </div>
              <div class="mt-6 p-4 bg-orange-900/30 rounded-lg">
                <p class="text-center text-orange-300 text-sm font-semibold">100% profit margins ‚Ä¢ Zero ongoing costs</p>
              </div>
            </div>

            <div class="bg-gradient-to-br from-discord/20 to-blue-900/20 rounded-lg p-8 border border-discord/30">
              <h3 class="text-2xl font-bold text-white mb-6 text-center">Private Coaching Server</h3>
              <p class="text-center text-gray-300 mb-6">Premium coaching business</p>
              <div class="space-y-4">
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Starting practice (25 clients √ó $150)</span>
                    <span class="text-blue-400 font-bold text-lg">$3,750/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Part-time coaching income</p>
                </div>
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Growing business (50 clients √ó $175)</span>
                    <span class="text-blue-400 font-bold text-lg">$8,750/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Full-time coaching livelihood</p>
                </div>
                <div class="bg-dark/50 p-4 rounded-lg">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300">Established practice (75 clients √ó $200)</span>
                    <span class="text-blue-400 font-bold text-lg">$15,000/month</span>
                  </div>
                  <p class="text-xs text-gray-400">Premium coaching business</p>
                </div>
              </div>
              <div class="mt-6 p-4 bg-blue-900/30 rounded-lg">
                <p class="text-center text-blue-300 text-sm font-semibold">90%+ profit margins ‚Ä¢ Complete control</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-6">Ready to Monetize Your Community?</h2>
          <p class="text-xl text-gray-300 mb-8">Choose the revenue model that fits your vision and start generating income from your fitness community today.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/affiliate/"
              class="inline-block bg-orange-600 hover:bg-orange-500 text-white font-bold py-4 px-8 rounded-full transition-colors text-lg"
            >
              Start Earning Commissions
            </a>
            <a
              href={`https://discord.com/api/oauth2/authorize?client_id=${DISCORD_CLIENT_ID}&permissions=395137251392&scope=bot%20applications.commands`}
              class="inline-block bg-discord hover:bg-blue-600 text-white font-bold py-4 px-8 rounded-full transition-colors text-lg"
            >
              Setup Personal Server
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>
</Layout>

<script>
  // TypeScript declarations for gtag
  declare global {
    function gtag(command: string, targetId: string, parameters?: Record<string, any>): void;
  }

  // Track page view for analytics
  if (typeof gtag !== 'undefined') {
    gtag('event', 'page_view', {
      page_title: 'Choose Your Revenue Model',
      page_location: window.location.href,
      content_group: 'creators'
    });
  }
</script>