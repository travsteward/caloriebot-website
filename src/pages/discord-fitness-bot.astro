---
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import ContactModal from "../components/ContactModal.astro";

// Add Discord client ID
const DISCORD_CLIENT_ID = import.meta.env.DISCORD_CLIENT_ID;

const pageTitle = "Discord Fitness Bot - AI-Powered Workout & Nutrition Tracking";
const pageDescription = "Transform your Discord with AI fitness bot. Features photo calorie tracking, guided workouts, challenges & engagement tools. Perfect for fitness servers.";

// FAQ schema for Discord fitness bot
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What is a Discord fitness bot?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "A Discord fitness bot is an automated bot that helps Discord communities track fitness activities, nutrition, workouts, and engage members in health-related challenges. CalorieBot is the leading Discord fitness bot with AI-powered features.",
      },
    },
    {
      "@type": "Question",
      name: "How does CalorieBot work as a fitness bot?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "CalorieBot uses AI to analyze food photos for calorie counting, provides guided workout instructions, tracks fitness progress, and creates community challenges. Members can log meals, workouts, and share progress directly in Discord.",
      },
    },
    {
      "@type": "Question",
      name: "What fitness features does CalorieBot offer?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "CalorieBot offers AI photo calorie tracking, custom workout builder, progress photo sharing, challenge system with leaderboards, nutrition logging, and community engagement tools - all integrated into Discord.",
      },
    },
    {
      "@type": "Question",
      name: "Is CalorieBot free to add to Discord?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes, CalorieBot is free to add to any Discord server. Server admins can earn 60% commission ($12/month) for every member who subscribes to premium features.",
      },
    },
  ],
};

const ratingValue = 4.8;
const ratingCount = 127;
const startingPrice = "19.99";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ratingValue={ratingValue}
  ratingCount={ratingCount}
  price={startingPrice}
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <ContactModal id="contact-modal" />
  <main>
    <!-- Hero Section -->
    <section class="relative bg-dark text-white py-16 md:py-24 overflow-hidden">
      <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute top-0 right-0 w-1/3 h-48 bg-orange-600/5 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-1/3 h-48 bg-discord/5 blur-3xl"></div>
      </div>

      <div class="container mx-auto px-4 max-w-4xl text-center relative z-10">
        <div class="space-y-8">
          <h1 class="hero-heading font-extrabold mb-6 tracking-tight">
            The Ultimate
            <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-orange to-brand-purple">Discord Fitness Bot</span>
          </h1>
          <p class="text-lg md:text-xl lg:text-2xl mb-10 text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Transform your Discord server into a thriving fitness community with AI-powered calorie tracking,
            guided workouts, challenges, and progress sharing. Perfect for gym servers, fitness groups, and health communities.
          </p>
          <div class="mt-10">
            <a
              href={`https://discord.com/api/oauth2/authorize?client_id=${DISCORD_CLIENT_ID}&permissions=395137251392&scope=bot%20applications.commands`}
              class="group inline-flex items-center gap-2 bg-orange-600 hover:bg-orange-500 text-white text-lg font-bold py-4 px-10 rounded-full transition-all duration-200 shadow-xl shadow-orange-600/20 hover:-translate-y-1"
              aria-label="Add CalorieBot Discord fitness bot to your server"
              onclick="if(typeof trackDiscordOAuthStart === 'function') trackDiscordOAuthStart('discord_fitness_bot_hero', 'bot_addition');"
            >
              Add Fitness Bot Free
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 transition-transform duration-200 group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose CalorieBot as Your Discord Fitness Bot -->
    <section class="py-20 bg-dark-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-heading font-bold text-white mb-6">
            Why CalorieBot is the Best Discord Fitness Bot
          </h2>
          <p class="text-lg text-gray-400 mt-4 max-w-3xl mx-auto">
            Unlike basic fitness bots, CalorieBot combines AI-powered nutrition tracking with comprehensive workout features,
            making it the complete solution for Discord fitness communities.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            { icon: "ðŸ¤–", title: "AI-Powered Intelligence", desc: "Advanced AI analyzes food photos and provides instant calorie calculations, making nutrition tracking effortless for your community." },
            { icon: "ðŸ’ª", title: "Complete Workout System", desc: "Built-in workout builder, exercise tracking, and PR logging - everything your fitness community needs in one Discord bot." },
            { icon: "ðŸ†", title: "Community Challenges", desc: "Automated challenges, leaderboards, and progress sharing keep your Discord fitness community engaged and motivated." },
            { icon: "ðŸ“Š", title: "Progress Tracking", desc: "Comprehensive progress tracking with photos, measurements, and detailed analytics for your Discord fitness community." },
            { icon: "ðŸ‘¥", title: "Social Features", desc: "Share meals, celebrate wins, and build accountability through Discord's native social features integrated with fitness tracking." },
            { icon: "ðŸ’°", title: "Monetization Ready", desc: "Earn 60% commission on subscriptions while providing value to your Discord fitness community - it's a win-win for everyone." }
          ].map(feature => (
            <div class="bg-secondary rounded-2xl p-8 border border-white/5 hover:border-white/10 transition-all hover:-translate-y-1 shadow-lg group">
              <div class="text-4xl mb-6 group-hover:scale-110 transition-transform duration-300 inline-block">{feature.icon}</div>
              <h3 class="text-xl font-bold text-white mb-4">{feature.title}</h3>
              <p class="text-gray-400 leading-relaxed">
                {feature.desc}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- AI Photo Calorie Tracking -->
    <section class="py-20 bg-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div class="order-2 lg:order-1">
            <div class="text-indigo-400 font-semibold mb-2 uppercase tracking-wider text-sm">AI-Powered Nutrition</div>
            <h2 class="section-heading font-bold text-white mb-6">
              Smart Food Analysis<br />for Discord Communities
            </h2>
            <p class="text-lg text-gray-300 mb-8 leading-relaxed">
              Your Discord fitness bot members can simply snap a photo of their meal and get instant calorie calculations.
              Our AI recognizes food items, portions, and provides accurate nutritional information - perfect for busy fitness communities.
            </p>
            <ul class="space-y-4 text-gray-300">
              <li class="flex items-start gap-3">
                <div class="p-1 rounded bg-indigo-500/10 text-indigo-400 mt-1">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span><strong>Instant Analysis:</strong> Get detailed nutritional breakdown in seconds</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="p-1 rounded bg-indigo-500/10 text-indigo-400 mt-1">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span><strong>Smart Adjustments:</strong> Fine-tune entries with one-tap editing</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="p-1 rounded bg-indigo-500/10 text-indigo-400 mt-1">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span><strong>Scale Integration:</strong> Achieve precise measurements for accuracy</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="p-1 rounded bg-indigo-500/10 text-indigo-400 mt-1">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span><strong>Label Reading:</strong> Scan nutrition labels for accurate tracking</span>
              </li>
            </ul>
          </div>
          <div class="order-1 lg:order-2 relative">
            <div class="absolute -inset-4 bg-indigo-500/20 blur-3xl rounded-full opacity-20"></div>
            <div class="grid grid-cols-2 gap-4 relative z-10">
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl translate-y-8">
                <img
                  src="/images/steak.png"
                  alt="AI Food Analysis for Discord Fitness Bot"
                  class="rounded-xl w-full h-auto shadow-lg"
                />
              </div>
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl">
                <img
                  src="/images/scale.png"
                  alt="Food Logging for Discord Fitness Communities"
                  class="rounded-xl w-full h-auto shadow-lg"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Workout Features -->
    <section class="py-20 bg-dark-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="section-heading font-bold text-white mb-4">
            Complete Workout System for Discord Fitness Bots
          </h2>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
           <div class="relative">
            <div class="absolute -inset-4 bg-orange-500/20 blur-3xl rounded-full opacity-20"></div>
            <div class="grid grid-cols-2 gap-4 relative z-10">
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl">
                <img
                  src="/images/barbell_workout.png"
                  alt="Barbell Workout Tracking for Discord Fitness Bot"
                  class="rounded-xl w-full h-auto shadow-lg"
                />
              </div>
              <div class="bg-dark-800 p-2 rounded-2xl border border-white/5 shadow-2xl translate-y-8">
                <img
                  src="/images/workouts_start.png"
                  alt="Workout Start Demo for Discord Fitness Communities"
                  class="rounded-xl w-full h-auto shadow-lg"
                />
              </div>
            </div>
          </div>

          <div>
            <div class="text-orange-400 font-semibold mb-2 uppercase tracking-wider text-sm">Guided Fitness</div>
            <h2 class="section-heading font-bold text-white mb-6">
              AI-Powered Workouts<br />Built for Discord
            </h2>
            <p class="text-lg text-gray-300 mb-8 leading-relaxed">
              Unlike basic Discord fitness bots, CalorieBot provides comprehensive workout functionality including
              guided exercises, progress tracking, and community sharing - all integrated into your Discord server.
            </p>
            <ul class="space-y-4 text-gray-300">
              {[
                { title: "Guided Workouts", desc: "Step-by-step exercise instructions" },
                { title: "PR Tracking", desc: "Log and compare personal records" },
                { title: "Workout Sharing", desc: "Celebrate completed workouts with your community" },
                { title: "Progress Tracking", desc: "Monitor your fitness journey over time" }
              ].map(item => (
                <li class="flex items-start gap-3">
                  <div class="p-1 rounded bg-orange-500/10 text-orange-400 mt-1">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  </div>
                  <div>
                    <strong class="block text-white">{item.title}</strong>
                    <span class="text-sm">{item.desc}</span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Challenge System -->
    <section class="py-20 bg-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div>
            <div class="text-green-400 font-semibold mb-2 uppercase tracking-wider text-sm">Gamified Fitness</div>
            <h2 class="section-heading font-bold text-white mb-6">
              Weekly Challenges<br />Built for Discord Communities
            </h2>
            <p class="text-lg text-gray-300 mb-8 leading-relaxed">
              Keep your Discord fitness community motivated through friendly competition and accountability.
              Set weekly goals, track progress, and celebrate wins together - all seamlessly integrated with your Discord server.
            </p>
            <div class="space-y-4">
              {[
                { title: "Auto-Pull Progress", desc: "Challenges automatically track nutrition and workout data" },
                { title: "Daily Targets", desc: "Track calories, workouts, steps, and protein" },
                { title: "Redemption Tasks", desc: "Miss a target? Complete community-approved tasks" },
                { title: "Leaderboards", desc: "Friendly competition to keep everyone motivated" }
              ].map(item => (
                <div class="bg-secondary p-4 rounded-xl border border-white/5">
